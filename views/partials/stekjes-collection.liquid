<section class="stekjes-collection">
  <h2 class="stekjes-collection-title">Vind jouw favoriet in onze collectie geliefde stekjes</h2>
  <div class="stekjes-collection-grid">

    <!-- Skeleton Loader (Partial state) -->
  <div class="stekjes-skeleton-loader" style="display: block;">
      {% render 'partials/stekje-item-skeleton.liquid' %}
  </div>
  
    <!-- Content (Ideal state) -->
  <div class="stekjes-content" style="display: none;">
    {% for stekje in stekjes %}
      {% include 'partials/stekje-item.liquid' %}
    {% endfor %}
  </div>
</section>

<style>
  .stekjes-collection {
    padding: 1rem;
    max-width: 1400px;
    margin: 0 auto 5em;
  }

  .stekjes-collection-title {
    text-align: center;
    font-size: 1.8rem;
    margin-bottom: 2rem;
    color: #2a5c45;
  }

  .stekjes-collection-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 600px) {
    .stekjes-collection-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .stekjes-collection-title {
      font-size: 2rem;
    }
  }

  @media (min-width: 800px) {
    .stekje-item {
      height: 600px;
    }
    .stekjes-collection-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 900px) {
    .stekjes-collection-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<script>
  window.onload = function() {
    setTimeout(function() {
      document.querySelector('.stekjes-skeleton-loader').style.display = 'none';
      document.querySelector('.stekjes-content').style.display = 'block';
    }, 2000); 
  };
</script>