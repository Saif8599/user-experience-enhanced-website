<header class="hero">
  <div class="hero-overlay"></div>
  <div class="hero-background">
    <picture>
      
      <!-- Art direction -->
      <source
        media="(orientation: portrait)"
        type="image/avif"
        srcset="../assets/varen.avif"
        width="300"
        height="400">

        <!-- AVIF format -->
      <source srcset="" type="image/avif">
      
        <!-- Webp format -->
      <source srcset="../assets/varen.webp" type="image/webp">
        <!-- Fallback -->
      <img
        src="../assets/varen.png"
        alt="Varen background"
        loading="lazy">
    </picture>
  </div>

  <nav class="main-navigation">
    <a class="logo" href="/">
      <img src="../assets/logo-bieb-in-bloei-wit.svg" alt="Bieb in Bloei homepage">
    </a>

    <!-- Hamburger Menu -->
    <button class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </button>

    <!-- Navbar Links -->
    <ul class="navbar-links">
      <li>
        <a href="/stekjes">Stekjes</a>
      </li>
      <li>
        <a href="/favorieten">Favorieten</a>
      </li>
    </ul>
  </nav>

  <div class="hero-content">
    <h1>{{ title }}</h1>
    <h2>{{ description }}</h2>
  </div>
</header>

<style>
  /* Hero Header */
  .hero {
    position: relative;
    height: 70vh;
    padding: 0 0 5em;
    z-index: 0;
  }

  /* Hero Overlay */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 85vh;
    background: var(--image-gradient);
    z-index: -1;
  }

  /* Hero Background */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  /* Main Navigation */
  .main-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;

    .logo {
      color: var(--primary-text-color);

      img {
        width: 100px;
        height: 100px;
      }
    }
  }

  /* Hamburger Menu */
  .hamburger {
    display: block;
    width: 30px;
    height: 24px;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    z-index: 0;

    .line {
      display: block;
      width: 30px;
      height: 3px;
      background-color: var(--primary-text-color);
      margin: 6px 0;
      transition: transform 0.3s ease-in-out
      , opacity 0.3s ease-in-out;
    }

    .hamburger.active .line:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .hamburger.active .line:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .line:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }

     &:hover {
      background: none;
    }

    @media (min-width: 768px) {
      display: none;
    }
  }

  /* Navbar Links */
  .navbar-links {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    list-style: none;
    position: absolute;
    top: 80px;
    right: 1rem;
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 10px;
    padding: 1em;
    z-index: 2;
    margin: 0;

    @media (min-width: 768px) {
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
      background-color: transparent;
      padding: 0 1em;
    }

    @media (min-width: 1024px) {
      gap: 50px;
    }

    li a {
      color: var(--primary-text-color);
      text-decoration: none;
      transition: transform 0.3s ease-in-out
      , text-decoration 0.3s ease-in-out;
    }
  }

  /* Hero Content */
  .hero-content {
    text-align: center;
    color: white;
    padding-top: 5em;

    h1 {
      color: white;
      margin: 0;
    }

    h2 {
      color: var(--primary-text-color);
      padding: 0 0 5em;
      margin: 0;
    }

    @media (min-width: 1024px) {
      margin-top: 3em;
    }
  }
</style>